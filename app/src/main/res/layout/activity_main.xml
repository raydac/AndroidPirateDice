<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@color/black">
        <ImageView
                android:contentDescription="@string/base_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/vertushka" android:id="@+id/ImagePlate"
                android:paddingStart="16dp" android:paddingEnd="16dp" android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:scaleType="fitCenter"
        />
        <ImageView
                android:contentDescription="@string/base_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/strelka" android:id="@+id/ImageArrow"
                android:paddingStart="16dp" android:paddingEnd="16dp" android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:scaleType="fitCenter"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>